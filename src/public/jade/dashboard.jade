doctype html
html
    head
        include ./includes/head.jade

    body
        include ./includes/navbar.jade

        section#dashboard
            .container
                h1 Predicciones
                
                .row
                    each prediction, i in predictions
                        .col-md-3
                            .cell-wrapper
                                h3 #{prediction.left.name}
                                .cell-content
                                    if prediction.left.status == "pending"
                                        span.text-info.
                                            La predicción aún está siendo procesada.

                    .col-md-3
                        .cell-wrapper
                            .cell-content.
                                Haz click <a href="/prediccion/crear">aquí</a> para crear una predicción.

        include ./includes/scripts.jade
